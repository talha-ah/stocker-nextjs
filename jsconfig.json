      "@utils/*": ["./utils/*"],
      "@pages/*": ["./pages/*"],
      "@hooks/*": ["./hooks/*"],
      "@forms/*": ["./forms/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./styles/*"],
